<section>
  <div class="d-flex align-items-end">
    <h2>ユーザー　一覧</h2>
    <h5 class="ml-5">現在の登録者は、<%= @users_all.count %>名です。</h5>
    <%= link_to "無効ユーザー　一覧", admin_users_no_active_path, class: "btn btn-md btn-outline-danger mb-1" %>
    <%= form_with url: admin_user_search_path, method: :get, class: "mb-1 ml-auto" do |f| %>
      <%= f.text_field :keyword, placeholder: "ユーザー検索" %>
      <%= f.submit "検索" %>
    <% end %>
  </div>
  <% @users.each do |user| %>
    <%= render "admin/users/info", user: user %>
  <% end %>
  <%= paginate @users %>
</section>