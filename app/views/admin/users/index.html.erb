<% @users.each do |user| %>
  <div class="row">
    <div class="col-1">
      <% if user.is_active? %>
				<span>有効</span>
			<% else %>
				<span>無効</span>
			<% end %>
			<%= link_to "編集", edit_admin_user_path(user), class: "btn btn-sm btn-info" %>
    </div>
    <div class="col-2">
      <%= image_tag user.get_profile_image(100, 100) %>
    </div>
    <div class="col-2">
      <div>
      ニックネーム:
        <%= user.nick_name %>
      </div>
      <div>
      登録日:
        <%= user.created_at.strftime("%Y/%m/%d") %>
      </div>
      <div>
      フォロー:
        <%= link_to user_followings_path(user) do %>
          <%= user.followings.count %>
        <% end %>
      </div>
      <div>
      フォロワー:
        <%= link_to user_followers_path(user) do %>
          <%= user.followers.count %>
        <% end %>
      </div>
    </div>
    <div class="col-3">
      自己紹介文:
      <%= user.introduction %>
    </div>
    <div class="col-4">
      累計食肉欄
    </div>
  </div>
<% end %>