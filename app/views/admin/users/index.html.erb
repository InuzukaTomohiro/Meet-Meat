<section>
  <div class="d-flex align-items-end">
    <h2>ユーザー　一覧</h2>
    <h5 class="ml-5">現在の登録者は、<%= @users_all.count %>名です。</h5>
    <%= link_to "無効ユーザー　一覧", admin_users_no_active_path, class: "btn btn-md btn-outline-danger mb-1" %>
  </div>
  <% @users.each do |user| %>
    <div class="admin_users row">
      <div class="user_status col-1">
        <%= link_to admin_users_update_status_path(user), method: :patch, class: "text-dark" do %>
        <% if user.is_active? %>
  				<div class="active"><strong>有効</strong></div>
  			<% else %>
  				<div class="no_active"><strong>無効</strong></div>
  			<% end %>
  			<% end %>
  			<%= link_to "詳細", edit_admin_user_path(user), class: "btn btn-sm btn-info" %>
      </div>
      <div class="col-2">
        <%= image_tag user.get_profile_image(100, 100), class: "pl-4" %>
      </div>
        <div class="col-2">
          <div>ID: <%= user.id %></div>
          <div><%= user.nick_name %></div>
          <div>フォロー:<%= user.followings.count %></div>
          <div>フォロワー:<%= user.followers.count %></div>
          <div>登録日:<%= user.created_at.strftime("%Y/%m/%d") %></div>
        </div>
      <div class="introduction col-4">
        自己紹介文:
        <%= user.introduction %>
      </div>
      <div class="total_meat col-3">
        累計食肉欄
      </div>
    </div>
  <% end %>
  <%= paginate @users %>
</section>