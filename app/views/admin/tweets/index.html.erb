<section>
  <div class="d-flex align-items-end">
    <h2>投稿一覧</h2>
    <h5 class="ml-5">現在の投稿総数は、「<%= @tweets_all.count %>」件です。</h5>
    <%= link_to "無効投稿一覧", admin_tweets_no_active_path, class: "btn btn-md btn-outline-danger mb-1" %>
    <%= form_with url: admin_tweet_search_path, method: :get, class: "mb-1 ml-auto" do |f| %>
      <%= f.text_field :keyword, placeholder: "キーワード" %>
      <%= f.submit "検索" %>
    <% end %>
  </div>
  <% @tweets.each do |tweet| %>
    <%= render "admin/tweets/index", tweet: tweet %>
  <% end %>
  <%= paginate @tweets %>
</section>