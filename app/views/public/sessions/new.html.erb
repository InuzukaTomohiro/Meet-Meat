<div class="row">
  <div class="col-12">
    <h2 class="text-center">ログイン</h2>
  </div>
</div>
<%= form_with model: @user, url: new_user_session_path do |f| %>
  <%= render "layouts/errors", obj: @user %>
  <table class="form">
    <thead>
      <tr>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= f.label :email, "メールアドレス" %></td>
        <td><%= f.email_field :email, placeholder: "meat@example", class: "form-control" %></td>
      </tr>
      <tr>
        <td><%= f.label :password, "パスワード" %></td>
        <td><%= f.password_field :password, autocomplete: "off", placeholder: "**********", class: "form-control" %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "ログイン", class: "btn btn-md btn-primary" %></td>
      </tr>
    </tbody>
  </table>
<% end %>
