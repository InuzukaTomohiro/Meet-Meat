<section>
  <div class="d-flex align-items-end">
    <h2><%= @user.nick_name %>さんのフォロワー　一覧</h2>
    <h4>(全<%= @follower_users.count %>件)</h4>
    <div class="ml-auto mb-2">
      <%= form_with url: user_search_path, method: :get do |f| %>
        <%= f.text_field :keyword, placeholder: "ユーザー検索" %>
        <%= f.submit "検索" %>
      <% end %>
    </div>
  </div>
  <% if @follower_users.exists? %>
    <%= render "follow", users: @follower_users %>
  <% else %>
  フォロワーがいません。
  <% end %>
</section>