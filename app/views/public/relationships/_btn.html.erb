<!--userモデルのメソッド、フォローのなかに（user）がいた場合-->
<% if current_user.following?(user) %>
  <%= link_to "フォロー外す", user_relationships_path(user), method: :delete, remote: true, class: "btn btn-sm btn-info" %>
<% else %>
  <% if user.is_active == true %>
  <%= link_to "フォローする", user_relationships_path(user), method: :post, remote: true, class: "btn btn-sm btn-success" %>
  <% end %>
<% end %>