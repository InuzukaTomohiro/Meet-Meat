<% users.each do |user| %>
  <div class="profile row align-items-center mb-2">
    <div class="col-4">
      <div class="row">
        <div class="user_image col-5">
          <%= link_to user_path(user) do %>
            <%= user.nick_name %>
            <%= image_tag user.get_profile_image(100, 100) %>
          <% end %>
        </div>
        <div class="user-info col-6">
          <div>投稿数：<%= user.tweets.count %></div>
          <!--フォロー数　テンプレート-->
          <div id="follow_counter"><%= render "public/relationships/counter", user: user %></div>
          <!--フォローボタン　テンプレート-->
          <div id="follow_<%= user.id %>">
            <% if user != current_user %>
              <%= render "public/relationships/btn", user: user %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-4"><%= user.introduction %></div>
    <div class="col-4">累計食肉数欄</div>
  </div>
<% end %>