<section>
  <div class="d-flex align-items-end">
    <h2>ユーザー検索結果</h2>
    <h4>「<%= @keyword %>」を含むニックネームのユーザーは、<%= @keyword_users.count %>人です。</h4>
    <div class="ml-auto mb-2">
      <%= form_with url: user_search_path, method: :get do |f| %>
        <%= f.text_field :keyword, placeholder: "ユーザー検索" %>
        <%= f.submit "検索" %>
      <% end %>
    </div>
  </div>
  <%= render "public/relationships/follow", users: @keyword_users %>
</section>