<% tweets.each do |tweet| %>
  <div class="tweets row">
    <div class="col-2">
      <%= link_to user_path(tweet.user) do %>
        <%= tweet.user.nick_name %><br>
        <%= image_tag tweet.user.get_profile_image(80, 80) %>
      <% end %>
      <div>
        <%= render "public/favorites/favorite_btn", tweet: tweet %>
      </div>
      <div>
        <%= link_to tweet_comments_path(tweet) do %>
          <span>コメント数:</span>
          <%= tweet.comments.count %>
        <% end %>
      </div>
      <div class="dropdown">
        <button
        class="btn btn-warning btn-sm dropdown-toggle"
        type="button"
        id="dropdownMenuButton"
        data-toggle="dropdown"
        aria-haspopup="true"
        aria-expanded="false"
        >コメント入力
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <%= render "public/comments/form", tweet: tweet, tweet_comment: tweet_comment %>
        </div>
      </div>
    </div>
    <div class="col-10">
      <div class="tweet_content row">
        <div class="col-2">
          <%= image_tag tweet.get_meat_image(100, 100) %>
        </div>
        <div class="tweet_body col-5">
          <%= tweet.body %>
        </div>
        <div class="col-5">
          <%= tweet.meat.meat_type %>
          <%= tweet.once_weight %><span>グラム</span>
        </div>
      </div>
    </div>
  </div>
<% end %>