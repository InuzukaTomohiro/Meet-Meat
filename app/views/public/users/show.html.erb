<section>
  <h2><%= @user.nick_name %>さんのページ</h2>
  <div class="profile row mb-2">
    <div class="col-2">
      <%= image_tag @user.get_profile_image(100, 100) %>
    </div>
    <div class="col-1">
      <%= @user.nick_name %><br>
      <% if @user.email != "guest@example.com" %>
        <%= link_to "登録情報編集", edit_user_path(@user), class: "btn btn-sm btn-success" %><br>
      <% end %>
      <%= @user.created_at.strftime("%Y/%m/%d") %>
    </div>
    <div class="col-2">
      <%= link_to user_followings_path(@user) do %>
        follow: <%= @user.followings.count %>
      <% end %><br>
      <%= link_to user_followers_path(@user) do %>
        follower: <%= @user.followers.count %>
      <% end %><br>
      <% if @user != current_user %>
        <%= render "public/relationships/btn", user: @user %>
      <% end %>
    </div>
    <div class="col-4">
      <%= @user.introduction %>
    </div>
    <div class="col-3">
      累計食肉欄
    </div>
  </div>
</section>

<section>
  <h3>投稿履歴</h3>
  <% @tweets.each do |tweet| %>
    <div class="tweets row">
      <div class="col-2">
        <i class="fas fa-heart"></i><%= tweet.favorites.count %><br>
        <div>
        <%= link_to tweet_comments_path(tweet) do %>
          コメント数:
          <%= tweet.comments.count %>
        <% end %>
        </div>
        投稿日:
        <%= tweet.created_at.strftime("%Y/%m/%d") %>
      </div>
      <div class="col-2">
        <%= image_tag tweet.get_meat_image(100, 100) %>
      </div>
      <div class="col-4">
        <%= tweet.body %>
      </div>
      <div class="col-4">
        <%= tweet.meat.meat_type %>
        <%= tweet.once_weight %>
      </div>
    </div>
  <% end %>
</section>
