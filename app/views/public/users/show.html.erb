<div class="row">
  <div class="col-2">
    <%= image_tag @user.get_profile_image(100, 100) %>
  </div>
  <div class="col-2">
  <%= @user.nick_name %><br>
  <%= link_to "登録情報編集", edit_user_path(@user), class: "btn btn-sm btn-succese" %><br>
  <%= @user.created_at.strftime("%Y/%m/%d") %>
  </div>
  <div class="col-4">
    <%= @user.introduction %>
  </div>
  <div class="col-2">
    <%= link_to "フォロー", user_followings_path(@user) %><br>
    <%= link_to "フォロワー", user_followers_path(@user) %><br>
    <% if @user != current_user %>
      <%= render "public/relationships/btn", user: @user %>
    <% end %>
  </div>
  <div class="col-2">
    累計食肉欄
  </div>
</div>
<% @tweets.each do |tweet| %>
  <div class="row">
    <div class="col-2">
      <%= tweet.favorites.count %><br>
      コメント数
      <%= tweet.created_at.strftime("%Y/%m/%d") %>
    </div>
    <div class="col-4">
      <%= image_tag tweet.get_meat_image(100, 100) %>
    </div>
    <div class="col-6">
      <div class="row">
        <%= tweet.body %>
      </div>
      <div class="row">
        <%= tweet.meat.meat_type %>
        <%= tweet.once_weight %>
      </div>
    </div>

  </div>
<% end %>